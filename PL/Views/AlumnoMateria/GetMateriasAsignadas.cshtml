@model ML.Materia
@{
    ViewBag.Title = "GetMateriasAsignadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Materias asignadas</h2>
<hr />
<div>
    <h4>@Session["nombreAlumno"]</h4><br />
    <a class="btn btn-info" href="@Url.Action("Boleta","AlumnoMateria")">Boleta</a>
</div>
<hr />
<div class="container">
    @if (Model.Materias != null)
    {
        if (Model.Materias.Count > 0)
        {
            <table class="table table-dark table-hover text-center">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Materia materia in Model.Materias)
                    {
                        <tr>
                            <td>@materia.Nombre</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete","AlumnoMateria",new {idMateria = materia.IdMateria})"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div role="alert" class="alert alert-warning">
                No tienes materias asignadas
            </div>
        }
        <div>
            <a class="btn btn-danger" href="@Url.Action("GetAll","Alumno")">Volver</a>
            <a class="btn btn-info" href="@Url.Action("GetMateriasNoAsignadas","AlumnoMateria")">Asignar materia</a>
        </div>
    }
</div>