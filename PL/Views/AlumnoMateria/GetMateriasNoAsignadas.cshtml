@model ML.Materia
@{
    ViewBag.Title = "GetMateriasNoAsignadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Materias dispoibles</h2>
<hr />
<div class="container">
    <form method="post" action="@Url.Action("AsignarMaterias","AlumnoMateria")">
        <table class="table table-dark table-hover text-center">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Asignar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Materia materia in Model.Materias)
                {
                    <tr>
                        <td>@materia.Nombre</td>
                        <td>
                            <input name="materias[]" class="form-check-input" type="checkbox" value="@materia.IdMateria" id="flexCheckDefault">
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a class="btn btn-danger" href="@Url.Action("GetMateriasAsignadas", "AlumnoMateria", new {idAlumno = Session["idAlumno"],nombreAlumno = Session["nombreAlumno"] })">Volver</a>
            <button class="btn btn-success" type="submit">Agregar</button>
        </div>
    </form>
</div>
