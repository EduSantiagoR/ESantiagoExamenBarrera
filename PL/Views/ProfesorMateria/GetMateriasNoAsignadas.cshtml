@model ML.Materia
@{
    ViewBag.Title = "GetMateriasNoAsignadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Materias no asignadas</h2>
<hr />
<div class="container">
    @if (Model.Materias != null)
    {
        if (Model.Materias.Count > 0)
        {
            <form method="post" action="@Url.Action("AsignarMateria","ProfesorMateria")">
                <table class="table table-dark table-hover text-center">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Asignar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ML.Materia materia in Model.Materias)
                        {
                            <tr>
                                <td>@materia.Nombre</td>
                                <td><input name="materias[]" class="form-check-input" type="checkbox" value="@materia.IdMateria" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div>
                    <button class="btn btn-success" type="submit">Guardar</button>
                </div>
            </form>
        }
        else
        {
            <div role="alert" class="alert alert-warning">
                Ya se han asignado todas las materias disponibles.
            </div>
        }
    }
</div>
